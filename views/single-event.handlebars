<div class="container d-flex justify-content-center py-5">

  <div class="col-md-6">
           <a type="button" href="/" class="btn btn-warning mb-2"><i class="fas fa-arrow-left"></i> back</a>
    <div class="card my-2">
      <h5 class="card-header">{{event.name}}</h5>

      <div class="card-body">
        <p> {{event.description}}
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Date: {{format_date event.event_date}}</li>
        <li class="list-group-item">Category:{{event.category}}</li>
        <li class="list-group-item">Covid Protocol: {{event.covid_items}}</li>
      </ul>

      <div class="card-footer">
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn">
          
            <button type="button" id="comment-btn" class="btn btn-sm btn-outline-secondary">Comment</button>
          </div>
          <figure class="text-end pt-3">

            <figcaption class="blockquote-footer ms-5 pe-5">
              Created by: {{event.user.username}}

            </figcaption>
          </figure>
        </div>
      </div>

