      <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <div class="col">
            <div class="card shadow-sm">
              <img src="https://via.placeholder.com/150" height="225">
              <div class="card-body">
                <h5 class="card-title"> <a href="/event/{{event.id}}">{{event.name}}</a> <span class="float-end text-muted">{{event.event_date}}</span></h5>
                <p class="card-text">{{event.description}}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn">
                    <button type="button" id="join-btn" class="btn btn-sm btn-outline-secondary">Join</button>
                    <button type="button" id="comment-btn" class="btn btn-sm btn-outline-secondary">Comment</button>
                  </div>
                  <small class="text-muted">{{event.category}}</small>

                </div>
              </div>
            </div>
          </div>              
          {{/each}}
