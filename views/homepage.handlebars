<section class="py-5 text-center container-fluid bg-light">
  <div class="row py-lg-2">
    <div class="col-lg-6 col-md-8 mx-auto">
      <img src="img/joinme-logo-sm.png" width="300">
      <h1 class="fw-light">Welcome to Join Me</h1>
      <p class="lead text-muted">JoinMe is a community-based event management platform that allows anyone to create,
        share, find and attend events in their area. Browse our featured events or search by date.</p>
      <p>
        <a href="/event/new-event" class="btn btn-success my-2">Create a New Event</a>
        <a href="/dashboard" class="btn btn-secondary my-2">View My Saved Events</a>
      </p>
    </div>
  </div>
</section>
<div class="album py-5">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      {{#each events as |event| }}
      <div class="col">
        <div class="card shadow-sm">
          <div class="card-header">
            <h5 class="card-title"><a href="/event/{{id}}">{{event.name}}</a>
              <small><span class="float-end text-muted">{{format_date event_date}}</span>
            </h5></small>
          </div>
          <div class="card-body">

            <p class="card-text">{{event.description}}</p>
            <p class="card-text text-muted text-right">Covid Protocols: {{event.covid_items}}</p>

            <div class="row">
              <div class="d-flex justify-content-between ">

                <small class="text-muted">Category: {{event.category}}</small>
                <small class="text-muted"> Created by: {{event.user.username}}</small>
              </div>
            </div>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item bg-light">Spread the word!</li>
          </ul>
          <div class="card-footer bg-transparent">
            <div class="d-grid gap-2 d-md-flex justify-content-between align-items-end">

              <div class="col-md-4 text-center"><a class="twitter-share-button"
                  href="https://twitter.com/intent/tweet?text=Check out this event {{event.name}} joinme-events.herokuapp.com/event/{{id}}"
                  target="_blank"> <i class="fab
                                                 fa-twitter text-lblue fa-2x" aria-hidden="true"></i></a><br>
                Tweet it </div>
              <div class="col-md-4 text-center"> <a
                  href="mailto:?subject=Check out this event - {{event.name}}!&body=I would love for you to JOIN ME!  https://joinme-events.herokuapp.com/event/{{id}}"><i
                    class="fas fa-envelope text-orange fa-2x" aria-hidden="true"></i></a><br> Send an Email</div>


              <div class="col-md-4 text-center"> <a
                  href="sms:add contacts&body=Check out this event - {{event.name}}! I would love for you to JOIN ME!  https://joinme-events.herokuapp.com/event/{{id}}"><i
                    class="fas fa-mobile-alt text-red fa-2x" aria-hidden="true"></i></a><br>Text it </div>

            </div>

          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>